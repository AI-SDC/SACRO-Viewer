{
  "name": "SACRO",
  "version": "0.1.0",
  "main": "main.js",
  "description": "SACRO Output Viewer",
  "author": "OpenSAFELY",
  "homepage": "https://github.com/opensafely-core/sacro",
  "scripts": {
    "dev": "electron . --no-sandbox",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^24.3.0",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "msi",
        "zip"
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "${env.BUILD_DIR}",
        "to": "sacro/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "minimatch": "^9.0.0",
    "portfinder": "^1.0.32"
  }
}
