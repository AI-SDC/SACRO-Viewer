{
  "name": "sacro",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "run": "electron . --no-sandbox",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^24.3.0",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "${env.BUILD_DIR}",
        "to": "sacro/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "minimatch": "^9.0.0"
  }
}
