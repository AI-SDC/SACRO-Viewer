{
  "name": "sacro",
  "version": "0.0.0",
  "private": true,
  "main": "./sacro-app/main.js",
  "description": "SACRO Output Viewer",
  "author": "OpenSAFELY",
  "homepage": "https://github.com/opensafely-core/sacro",
  "scripts": {
    "assets-dev": "vite",
    "assets-build": "vite build",
    "assets-preview": "vite preview",
    "electron-dev": "electron ./sacro-app/main.js --no-sandbox",
    "electron-build": "electron-builder",
    "electron-pack": "electron-builder --dir",
    "lint": "eslint \"./**/*.js\"",
    "lint-fix": "eslint \"./**/*.js\" --fix"
  },
  "dependencies": {
    "portfinder": "^1.0.32",
    "vite": "^4.3.9"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.4.14",
    "electron": "^24.4.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "minimatch": "^9.0.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  },
  "build": {
    "directories": {
      "output": "sacro-app/dist",
      "buildResources": "sacro-app/build"
    },
    "win": {
      "target": [
        "msi"
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "${env.BUILD_DIR}",
        "to": "sacro/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "staticfiles",
        "to": "sacro/lib/staticfiles",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
